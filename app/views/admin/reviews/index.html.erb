
  <div class="row">
    <div class="col-6">
      <%= link_to "会社ページへ戻る", admin_company_path(params[:company_id]) %>
    </div>
  </div>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">目的</th>
      <th scope="col">投稿日時</th>
      <th scope="col">ネガティブコメント</th>
    </tr>
  </thead>
  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td>
          <%= link_to admin_company_review_path(company_id: review.company.id, id: review.id) do %>
            <%= review.objective_i18n %>
          <% end %>
        </td>
        <td><%= review.created_at.strftime('%Y/%m/%d') %></td>
        <% if review.deletion == true %>
        <td>違反レビュー</td>
        <% end %>
        <td>ネガティブ数：<%= review.negative_comments_count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @reviews %>
