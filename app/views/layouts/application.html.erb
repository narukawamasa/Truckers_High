<!DOCTYPE html>
<html>
  <head>
    <title>NomoJyan</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <% if admin_signed_in? %>
          <a class="navbar-brand p-3" href="/admin"><%= image_tag('logo.png') %></a>
          <% else %>
          <a class="navbar-brand p-3" href="/"><%= image_tag('logo.png') %></a>
          <% end %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if transport_company_signed_in? %>
              <li>
                <%= link_to "マイページ", transport_company_path(current_transport_company) %>
              </li>
              <li>
                <%= link_to "所属運転手一覧", drivers_path %>
              </li>
              <li>
                <%= link_to "ログアウト", destroy_transport_company_session_path, method: :delete %>
              </li>
              <% elsif driver_signed_in? %>
              <li>
                <%= link_to "マイページ", driver_path(current_driver) %>
              </li>
              <li>
                <%= link_to "会社一覧", companies_path %>
              </li>
              <li>
                <%= link_to "運送会社一覧", transport_companies_path %>
              </li>
              <li>
                <%= link_to "ログアウト", destroy_driver_session_path, method: :delete %>
              </li>
              <% elsif admin_signed_in? %>
              <li>
                <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
     <footer class="fixed-bottom bg-dark text-white">
      <div class="container">
        <div class="row no-gutters">
          <div class="col-md-4 p-3">
            <%= image_tag('logo_footer.png') %>
          </div>
          <div class="col-md-8">
            <ul class="p-0 list-unstyled">
            </ul>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
