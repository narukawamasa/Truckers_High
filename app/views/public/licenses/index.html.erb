<div class="container">
  <div class="row">
    <h4>免許新規登録</h4>
    <%= form_with model: @license, url: licenses_path, method: :post do |f| %>
      <%= f.text_field :name %>
      <%= f.submit "新規登録" %>
    <% end %>
  </div>
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th scope="col"></th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% @licenses.each do |license| %>
        <tr>
          <td><%= license.name %></td>
          <td>
            <% if license.possession_licenses.exists? && license.possession_licenses.exists?(driver_id: current_driver.id) %>
              <%= link_to "外す", possession_license_path(license.id), method: :delete %>
            <% else %>
              <%= form_with model: @possession_license, url: possession_licenses_path, method: :post do |f| %>
                <%= f.hidden_field :license_id, :value => license.id %>
                <%= f.hidden_field :driver_id, :value => current_driver.id %>
                <%= f.submit "所持" %>
              <% end %>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>